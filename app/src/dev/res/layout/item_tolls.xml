<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_tolls_fare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp10">

        <com.customviews.TypefaceTextView
            android:id="@+id/tv_toll_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_toll_price"
            android:textColor="?attr/app_text_color"
            android:textSize="?attr/app_text_size_small"
            app:custom_font="?attr/app_font_normal"/>

        <com.customviews.TypefaceTextView
            android:id="@+id/tv_toll_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="?attr/app_text_color"
            android:textSize="?attr/app_text_size_small"
            app:custom_font="?attr/app_font_normal"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dv1"
        android:layout_below="@+id/rl_tolls_fare"
        android:background="?attr/app_divider_color"/>

</RelativeLayout>