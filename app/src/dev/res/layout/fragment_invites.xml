<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?attr/app_screen_bg_color"
              android:clickable="true"
              android:gravity="center_horizontal"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp20"
            android:src="@mipmap/mail_invite"/>


        <com.customviews.TypefaceTextView
            android:id="@+id/tv_dummy_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_image"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20"
            android:text="@string/dummy_share_text"
            android:textColor="?attr/app_text_color"
            android:textSize="?attr/app_text_size_normal"
            app:custom_font="?attr/app_font_normal"/>


        <com.customviews.TypefaceTextView
            android:id="@+id/tv_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_dummy_text"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20"
            android:text="@string/invite_code"
            android:textColor="?attr/app_text_color"
            android:textSize="?attr/app_text_size_normal"
            app:custom_font="?attr/app_font_normal"/>

        <com.customviews.TypefaceTextView
            android:id="@+id/tv_invite_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_invite"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp5"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="x8u845"
            android:textColor="?attr/app_text_color"
            android:textSize="?attr/app_text_size_normal"
            app:custom_font="?attr/app_font_medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dv1"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:background="?attr/app_divider_color"/>

    </LinearLayout>

    <com.customviews.TypefaceTextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="?attr/btn_height"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp15"
        android:background="?attr/btn_bg_drawable"
        android:gravity="center"
        android:text="@string/share_via"
        android:textAllCaps="true"
        android:textColor="?attr/btn_text_color"
        android:textSize="?attr/btn_text_size"
        app:custom_font="?attr/app_font_medium"/>

</LinearLayout>